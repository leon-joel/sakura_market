%h1 顧客管理

.clearfix
  = paginate @users

%table.table
  %thead
    %tr
      %th ID
      %th 名前
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= link_to '詳細', admin_user_path(user.id)
        %td= link_to '編集', edit_admin_user_path(user.id)
        %td= link_to '削除', admin_user_path(user.id), method: :delete, data: {confirm: "本当に削除しますか？"}

= paginate @users
