#edit_time_range_modal.modal{ tabindex: "-1", role: "dialog", "aria-hidden" => "true"}
  .modal-dialog
    .modal-content

      .modal-header
        %button.close{ type: "button", data: { dismiss: "modal"} }
          %span &times;

        %h4.modal-title 配達時間の変更

      .modal-body
        .field
          .form-group.string
            %label.control-label 時間帯
            -#%select.form-control
            -#  %option{ value: "0" }
            -#    = time_range_to_string(0)
            -#  %option{ value: "1", selected: "selected" }
            -#    = time_range_to_string(1)
            -#  %option{ value: "2" }
            -#    = time_range_to_string(2)
            -#  %option{ value: "3" }
            -#    = time_range_to_string(3)
            -#  %option{ value: "4" }
            -#    = time_range_to_string(4)
            -#  %option{ value: "5" }
            -#    = time_range_to_string(5)

            .btn-group-vertical{ id: "delivery_time_range_group", data: { toggle: "buttons" }}
              - (0..5).each do |range_num|
                %label.btn.btn-primary{ id: "delivery_time_range_label_#{range_num}", data: { range_num: range_num } }
                  %input{ type: "radio", name: "order[delivery_time_range]", value: range_num, id: "delivery_time_range_#{range_num}", autocomplete: "off"}
                  = time_range_to_string(range_num)

      .modal-footer
        %button.btn.btn-primary{ onclick: "updateDeliveryTimeRage()" } OK
        %button.btn.btn-default{ type: "button", data: { dismiss: "modal" }} Cancel
