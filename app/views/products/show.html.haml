%p
  %b Name:
  = @product.name
%p
  %b Picture:
  = @product.picture
%p
  %b Price:
  = @product.price
%p
  %b Description:
  = @product.description
%p
  = simple_form_for :cart_product,
                    url: cart_products_path(@product.id), method: :post,
                    remote: true do |f|
    = f.hidden_field :product_id, value: @product.id
    = f.submit "カートに入れる", class: 'btn btn-info btn-xs'



